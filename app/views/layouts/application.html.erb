<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="d-lg-none" >
  <%= link_to image_tag("motif_xingones-03.jpg", height: "auto", width: '150px', :style => 'margin-top: -15px') %>
  </div>
  <div class="d-none d-lg-block" >
    <%= link_to image_tag("motif_xingones-03.jpg", height: "auto", width: '75px', :style => 'margin-top: -15px') %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <h2 class="navbar-toggler-icon"></h2>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item ">
        <a class="nav-link" href="/"></a>
      </li>
    </ul>
    <div class="form-inline my-6 my-lg-0">
      <div class="d-lg-none" style="font-size: 5rem">
        <ul class="navbar-nav mr-auto">
          <% @cms_site.pages.order(:position).where.not(:label => 'Home').each do |page|  %>
            <li class="nav-item">
              <a class="nav-link" href="<%= page.slug %>"><%=  page.label %></a>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="d-none d-lg-block">
        <ul class="navbar-nav mr-auto">
          <% @cms_site.pages.order(:position).where.not(:label => 'Home').each do |page|  %>
            <li class="nav-item">
              <a class="nav-link" href="<%= page.slug %>"><%=  page.label %></a>
            </li>
          <% end %>
          <li class="nav-item">
            <%=image_tag("motif_xingones-04.jpg", width: '50px') %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<body>
